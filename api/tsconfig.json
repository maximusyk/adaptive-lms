{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "es2017",
      "esnext.asynciterable"
    ],
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@db/*": [
        "./src/db/*"
      ],
      "@general-types/*": [
        "./src/types/*"
      ],
      "@exceptions/*": [
        "./src/exceptions/*"
      ],
      "@middlewares/*": [
        "./src/middlewares/*"
      ],
      "@auth/*": [
        "./src/core/auth/*"
      ],
      "@chapters/*": [
        "./src/core/chapters/*"
      ],
      "@classes/*": [
        "./src/core/classes/*"
      ],
      "@courses/*": [
        "./src/core/courses/*"
      ],
      "@keywords/*": [
        "./src/core/keywords/*"
      ],
      "@lectures/*": [
        "./src/core/lectures/*"
      ],
      "@quizzes/*": [
        "src/core/quizzes/*"
      ],
      "@user-quiz-result/*": [
        "./src/core/user-quiz-result/*"
      ],
      "@tokens/*": [
        "./src/core/tokens/*"
      ],
      "@units/*": [
        "./src/core/units/*"
      ],
      "@users/*": [
        "./src/core/users/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "tsconfig-paths-bootstrap.js"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
